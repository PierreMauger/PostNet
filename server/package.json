{
    "name": "server",
    "version": "1.0.0",
    "description": "server is the ultimate backend solution",
    "main": "src/server.js",
    "scripts": {
        "dev:db": "docker run --name ${DB_NAME} -e POSTGRES_PASSWORD=${DB_PASS} -e POSTGRES_USER=${DB_USER} -e POSTGRES_DB=${DB_NAME} -p ${DB_PORT}:${DB_PORT} -d postgres:alpine",
        "setup": "npm install && npm update",
        "tsc": "tsc",
        "build": "npm run tsc",
        "start": "ts-node-dev ./src/server.ts",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/server.ts",
        "prod": "tsc && node ./build/src/server.js"
    },
    "keywords": [
        "express",
        "backend",
        "server"
    ],
    "license": "UNLICENSED",
    "dependencies": {
        "@types/express": "^4.17.1",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-custom-error": "^1.8.4",
        "has-keys": "^0.1.0",
        "helmet": "^3.21.2",
        "http-status": "^1.3.2",
        "mandatoryenv": "^1.1.1",
        "module-alias": "^2.2.2",
        "morgan": "^1.9.1",
        "mysqlm": "^2.0.3",
        "pg": "^8.5.1",
        "pg-god": "^1.0.11",
        "reflect-metadata": "^0.1.13",
        "rotating-file-stream": "^1.4.6",
        "routes": "^2.1.0",
        "ts-node-dev": "^1.0.0-pre.43",
        "tsc": "^1.20150623.0",
        "typeorm": "^0.2.31",
        "typescript": "^3.6.3",
        "user": "^0.0.0"
    },
    "_moduleAliases": {
        "@root": "src",
        "@controllers": "src/controllers",
        "@models": "src/models",
        "@util": "src/util",
        "@routes": "src/routes"
    }
}
